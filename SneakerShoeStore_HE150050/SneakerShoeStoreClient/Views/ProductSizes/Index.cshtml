@model IEnumerable<BusinessObject.Models.ProductSize>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create" asp-route-id="@ViewBag.productId">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Product)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Size)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Product.ProductName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Size.SizeNumber)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ProductSizeId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ProductSizeId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ProductSizeId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
